            var number1 = window.prompt("Enter a number:");
            var number2 = window.prompt("Enter a number:");
            var resultNum = parseInt(number1) + parseInt (number2);
            window.alert(number1 + "+" + number2 + "=" + resultNum);

            var firstname = window.prompt("Your first name is:");
            var lastname = window.prompt("Your last name is:");
            var resultName = firstname + " " + lastname;
            window.alert("Your full name is:"+resultName);

        </script>
